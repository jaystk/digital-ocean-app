import ButtonGradient from "./assets/svg/ButtonGradient";
import Button from "./components/Button"; // Note: Button is imported but not used in the provided code
import Header from "./components/Header";
import Hero from "./components/Hero";
import ProductShowcase from "./components/ProductShowcase"; // Assuming you have this component

import Carousel from "./components/Carousel"; // Assuming you have this component
import Middle from "./components/Middle"; // Assuming you have this component
import Footer from "./components/Footer"; // Assuming you have this component

import { Timeline } from 'react-twitter-widgets'
import Instagram from './components/Instagram';
import Connections from './components/Connections';

import React, { useState, useEffect } from 'react';

const App = () => {
  const [timelineOptions, setTimelineOptions] = useState({
    dataSource: {
      sourceType: 'profile',
      screenName: 'valorant'
    },
    options: {
      height: '700',
      content: 'dark',
      width: '400' // Default width
    }
  });

  useEffect(() => {
    const handleResize = () => {
      // Example breakpoints: 640px (sm), 768px (md), 1024px (lg)
      const screenWidth = window.innerWidth;
      let newWidth = '400'; // Default width

      if(screenWidth >= 1024) { // lg
        newWidth = '600'; // Adjusted width for large screens
      } else if(screenWidth >= 768) { // md
        newWidth = '500'; // Adjusted width for medium screens
      } else if(screenWidth >= 640) { // sm
        newWidth = '450'; // Adjusted width for small screens
      }

      setTimelineOptions(prevOptions => ({
        ...prevOptions,
        options: {
          ...prevOptions.options,
          width: newWidth
        }
      }));
    };

    // Listen for window resize events
    window.addEventListener('resize', handleResize);

    // Set initial size based on current window width
    handleResize();

    // Cleanup listener on component unmount
    return () => window.removeEventListener('resize', handleResize);
  }, []);

  return (
    <div className='bg-red-500 mx-auto flex flex-col sm:flex-row items-center justify-center gap-x-4 py-2'>
        <Instagram />
        <div className='pr-4 sm:pr-10 md:pr-20 lg:pr-60'>
          <Timeline 
          dataSource={timelineOptions.dataSource}
          options={timelineOptions.options}/>
        </div>
    </div>
  );
};

export default App;
