const ImageCard = ({ imageSrc, title, currentColor }) => {
  const [isClicked, setIsClicked] = useState(false);

  const handleImageClick = () => {
    setIsClicked(!isClicked);
  };

  return (

    <div className="relative bg-blue-200 shadow-lg rounded-lg overflow-hidden flex flex-col">
      <div className="relative flex flex-col justify-center items-center p-4 cursor-pointer h-48" onClick={handleImageClick}>
        <img src={imageSrc} alt={title} className={`w-full h-full object-cover ${isClicked ? 'opacity-50' : ''}`} />
        {isClicked && (
          <div className="absolute inset-0 flex justify-center items-center">
            <svg className="w-3/4 h-3/4 text-red-500" viewBox="0 0 100 100">
              <line x1="10" y1="10" x2="90" y2="90" stroke={currentColor} strokeWidth="10" />
              <line x1="90" y1="10" x2="10" y2="90" stroke={currentColor} strokeWidth="10" />
            </svg>
          </div>
        )}
      </div>
      <div className="bg-blue-400  text-center py-2">
        <span className="text-white font-semibold">{title}</span>
      </div>
    </div>
  );
};

